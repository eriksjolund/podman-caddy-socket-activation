{
	default_bind fd/4 {
		protocols h1 h2
	}
	default_bind fdgram/5 {
		protocols h3
	}
	admin unix//run/admin.sock
}

http:// {
	bind fd/3 {
		protocols h1
	}
	redir https://{host}{uri}
	log
}

whoami.example.com {
	reverse_proxy whoami:80
	log
}

static.example.com {
	root * /static
	file_server
	log
}

# listen on custom network
http://whoami.example.com {
	bind 0.0.0.0 [::1] {
		protocols h1
	}
	reverse_proxy whoami:80
	log
}

# listen on custom network
http://static.example.com {
	bind 0.0.0.0 [::1] {
		protocols h1
	}
	root * /static
	file_server
	log
}
